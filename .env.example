# New Chats - Variáveis de Ambiente

# Ambiente
NODE_ENV=production

# Servidor
PORT=3001
FRONTEND_URL=http://localhost:3000

# Banco de Dados PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=newchats
DB_USER=newchats_user
DB_PASSWORD=newchats_pass123

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=newchats_jwt_secret_key_2024_change_in_production

# Stripe (Pagamentos)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRODUCT_ID_PRO=prod_Sh10D26PVfLJc8

# OpenAI (IA para mensagens)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# WhatsApp
WHATSAPP_SESSION_PATH=/app/sessions
WHATSAPP_MAX_CONNECTIONS=10

# Email (opcional - para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app
SMTP_FROM=New Chats <noreply@newchats.io>

# Logs
LOG_LEVEL=info
LOG_FILE=/app/logs/newchats.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Timezone
TZ=America/Sao_Paulo

# Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=newchats_session_secret_change_in_production

# URLs
BASE_URL=http://localhost
API_URL=http://localhost/api
WEBHOOK_URL=https://app.newchats.io/webhook/integracao-stripe

# Features
ENABLE_AI_MESSAGES=true
ENABLE_MISSED_CALL=true
ENABLE_ANTI_BLOCK=true
ENABLE_ANALYTICS=true

# Limites
MAX_CONTACTS_PER_USER=100000
MAX_CAMPAIGNS_PER_USER=1000
MAX_MESSAGES_PER_MINUTE=30
MAX_WHATSAPP_CONNECTIONS=10

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoramento
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here